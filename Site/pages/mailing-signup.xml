<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatForm" id="signup_form">
		<widget class="SwatFrame" id="frame">
			<widget class="SwatFormField" id="email_field">
				<property name="title">Email</property>
				<property name="note"><![CDATA[Your address will not be shared
					or sold to other businesses. See our
					<a href="x">Privacy Policy</a>.]]>
				</property>
				<property name="note_content_type">text/xml</property>
				<widget class="SwatEmailEntry" id="email">
					<property name="required" type="boolean">true</property>
					<property name="maxlength" type="integer">255</property>
				</widget>
			</widget>
			<widget class="SwatFooterFormField">
				<property name="note"><![CDATA[You can also easily
					<a href="x">remove your email address</a>
					from our mailing list.]]>
				</property>
				<property name="note_content_type">text/xml</property>
				<widget class="SwatButton">
					<property name="title">Join Mailing List</property>
				</widget>
			</widget>
		</widget>
	</widget>
</swatml>
