<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="edit_frame">
		<property name="title" translatable="yes">Poster Frame</property>
		<widget class="SwatForm" id="edit_form">
			<widget class="SwatContentBlock" id="player">
				<property name="content_type">text/xml</property>
			</widget>
			<widget class="SwatFormField" id="custom_image_field">
				<property name="title" translatable="yes">Custom Poster Frame</property>
				<widget class="SwatFileEntry" id="custom_image">
					<property name="required" type="boolean">true</property>
					<property name="accept_mime_types[]">image/jpeg</property>
					<property name="accept_mime_types[]">image/png</property>
					<property name="accept_mime_types[]">image/tiff</property>
				</widget>
			</widget>
			<widget class="SwatFooterFormField" id="footer">
				<widget class="SwatButton" id="submit_button" />
			</widget>
		</widget>
	</widget>
</swatml>
